@using GitNinja.Gallery.App_Start
@{
    var user = global::GitNinja.Gallery.Models.User.Current;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - GitNinja</title>
    <link href="~/Content/img/logo-32.png" rel="shortcut icon" type="image/png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/bs")
    @Styles.Render("~/Content/gn")
    @RenderSection("head", required: false)
</head>
<body>
    <div class="wrap">
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="brand" href="#"></div>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Dashboard</a></li>
                            <li><a href="#projects">Dojos</a></li>
                            <li><a href="#repositories">Repositories</a></li>
                            <li><a href="#prefs">Preferences</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li><a href="#" class="nav-notifications visible-desktop" data-placement="bottom" data-toggle="popover" data-original-title="Notifications"><span class="badge badge-notification">0</span></a></li>
                            <li class="divider-vertical"></li>

                            <li>
                                <a href="#" class="user-nav">
                                    @if (User != null && !string.IsNullOrWhiteSpace(User.Identity.Name))
                                    {
                                        @Html.Raw(Html.Gravatar(user.Email, 24, htmlAttributes: new { @class = "user-icon img-rounded" }))
                                        <span class="username">&nbsp;@user.DisplayName</span>
                                    }
                                    else
                                    {
                                        <span>login</span>
                                    }
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <header class="jumbotron subhead">
            <div class="container">
                @RenderSection("topbar", required: false)
            </div>
        </header>
        <div class="container">
            @RenderBody()
        </div>
              
    </div>
    <footer class="footer">
        <div class="container">
            <p>
                Enterprise Git Hosting for Windows powered by <strong>GitNinja</strong> 1.0 (build <span class="text-success">af938sh2c</span>)
            </p>
            <ul class="footer-links">
                <li><a href="">Changelog</a></li>
                <li class="muted">-</li>
                <li><a href="#">Issue Tracker</a></li>
                <li class="muted">-</li>
                <li><a href="mailto:info@gitninja.com">Contact Us</a></li>
            </ul>
        </div>
    </footer>

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/gitninja")
    @RenderSection("bottom", required: false)

</body>
</html>
